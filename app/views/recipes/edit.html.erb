<h1>Editing a recipe</h1>

<%= render 'form', recipe: @recipe %>

<br>

<%= link_to 'Show', @recipe %> |
<%= link_to 'Back', recipes_path %>


<br><br><br>

<h2>Ingredients</h2>

<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li>
      <%= ingredient.name %>
      <%= link_to 'X', recipe_ingredient_path(@recipe, ingredient), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= render 'ingredients/new', post: @recipe %>
