<%= form_tag search_path, method: :get, class: 'isTextCentered' do %>
  <div class="field">
    <%= text_field_tag :cuisine, params[:cuisine], placeholder: 'Cuisine', class: 'Input' %>
  </div>

  <div class="field">
    <%= text_field_tag :ingredient, params[:ingredient], placeholder: 'Ingredient', class: 'Input' %>
  </div>

  <%= submit_tag 'Search', name: nil, class: 'Button' %>
<% end %>

<% @recipes.each do |recipe| %>
  <div class='Recipe'>
    <h4><%= recipe.name %></h4>
    <p>Cuisine: <%= recipe.cuisine %><p>
    <p>Cooking time: <%= recipe.cooking_time %> min<p>
    <p>Ingredients: <%= recipe.ingredients.pluck(:name).join(', ') %><p>
    <p><%= recipe.instructions %><p>
  </div>
<% end %>

<% if @recipes.empty? %>
  <p>No recipes found</p>
<% end %>