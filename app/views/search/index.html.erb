<h1>Search</h1>

<%= form_tag search_path, method: :get do %>
  <div class="field">
    <%= label_tag :cuisine %>
    <%= text_field_tag :cuisine, params[:cuisine] %>
  </div>

  <div class="field">
    <%= label_tag :ingredient %>
    <%= text_field_tag :ingredient, params[:ingredient] %>
  </div>

  <%= submit_tag 'Search', name: nil %>
<% end %>

<h2>Recipes</h2>

<% @recipes.each do |recipe| %>
  <div class='Recipe'>
    <h4><%= recipe.name %></h4>
    <p><%= recipe.cuisine %><p>
    <p>Cooking time: <%= recipe.cooking_time %> min<p>
    <p>Ingredients: <%= recipe.ingredients.pluck(:name).join(', ') %><p>
    <p><%= recipe.instructions %><p>
  </div>
<% end %>

<% if @recipes.empty? %>
  <p>No recipes found</p>
<% end %>